<Project Sdk="Dalamud.NET.Sdk/14.0.1">
    <PropertyGroup>
        <Version>1.0.1.0</Version>
        <PackageProjectUrl>https://github.com/nebel/CurrencyWatchdog.git</PackageProjectUrl>
        <LangVersion>preview</LangVersion>
        <RootNamespace>CurrencyWatchdog</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\KamiToolKit\KamiToolKit.csproj"/>
    </ItemGroup>

    <Target Name="CopyResources" AfterTargets="Build">
        <ItemGroup>
            <GetFiles Include="$(ProjectDir)\Resources\**\*"/>
        </ItemGroup>
        <Copy SourceFiles="%(GetFiles.Identity)" DestinationFolder="$(OutDir)\images"/>
    </Target>
</Project>
